<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kill Bluetooth"
        android:id="@+id/killbutton"
        android:background="@color/primary"
        android:theme="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/progressBar"
        android:elegantTextHeight="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Revive Bluetooth"
        android:id="@+id/revivebutton"
        android:theme="@style/AppTheme"
        android:background="@color/primary"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/progressBar"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sword"
        android:src="@mipmap/sword"
        android:visibility="invisible"
        android:textAlignment="center"
        android:maxWidth="520px"
        android:maxHeight="223px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bt"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btfail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/btfail"
        android:visibility="invisible" />

</RelativeLayout>
